@model IEnumerable<NomNomScratch.Models.Beverage>

@{
    Layout = "~/Views/MainCourseEditLayout.cshtml";
    ViewBag.Title = "BeverageShow";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DessertShow</title>
</head>
<style>

    div.third {
        opacity: 0.6;
    }



    body {
        background-image: linear-gradient(0deg, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.5)), url('/images/dessertAdmin2.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
       
    }
</style>





<div>




    <table class="table table-striped table-hover ">

        <tr>

            <td>
                <h2>Beverage List</h2>
            </td>

        </tr>




</div>



<p style="color:white">
    .
</p>


<div>




    <table class="table table-striped  float-left">

        <thead class="thead-dark">
            <tr>

            <tr>
                <th>
                    ID
                </th>

                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>






            @foreach (var item in Model)
            {
        <tr class=" table table-striped table-active">


            <td style="width:150px">
                @Html.DisplayFor(modelItem => item.BevID)
            </td>


            <td style="width:150px">
                @Html.DisplayFor(modelItem => item.Name)
            </td>


            <td style="width:150px">
                @Html.DisplayFor(modelItem => item.Price)
            </td>

           
            <td>
                <button class=" btn btn-dark ">
                    @Html.ActionLink("Edit", "BeverageEdit", new { id = item.BevID }, new { @style = "color:#FFFFFF;" })

                </button>



                <button class=" btn btn-danger">
                    @Html.ActionLink("Delete", "BeverageDelete", new { id = item.BevID }, new { @style = "color:#FFFFFF;" })

                </button>
            </td>
        </tr>
            }
        </thead>
    </table>


    <div class="float-right">


        <a href="~/BookFood/dashboard" class="btn btn-dark">Back</a>

    </div>


    <div class="float-left">

        <a href="~/BookFood/BeverageAdd" class="btn btn-dark">Add item</a>


    </div>


</div>
</body>
</html>